---
import { siteConfig } from '@/config';
import { url } from '@utils/url-utils';
import ThemeIcon from '@components/control/ThemeIcon.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from "astro:transitions";

const pageTitle = `${siteConfig.title} - ${siteConfig.subTitle}`;
const backgroundImageEnabled = siteConfig.backgroundImage.enabled;
const backgroundImageUrl = url(siteConfig.backgroundImage.url);


---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href={url(siteConfig.favicon)} type="image/x-icon">
    <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Delius+Swash+Caps"> -->
    <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Delius"> -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Comic+Neue">
    <title>{pageTitle}</title>
    
</head>
<body style={backgroundImageEnabled ? `background-image: url(${backgroundImageUrl})` : ''}>
    <ThemeIcon />
    <slot />
    <Footer />
</body>

</html>


<style is:global define:vars={{}}>
@font-face {
  font-family: 'Comic Sans MS';
  src: url('/fonts/ComicSansMS.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* @font-face {
  font-family: 'Comic Sans MS';
  src: url('/fonts/ComicSansMS-Bold.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
} */
/* 默认主体，白天模式 */
:root {
    --bg-color: #f7f7ff;
    --text-color: #000000;
    --footer-text-color: #000000;
    --link-color: #003b6e;
    --motto-text-color: #999;
    --border-color: gray;

    --image-shadow-color: rgba(0, 0, 0, 0.15);
    
    /* 弥散渐变背景相关变量 */
    --color-background-primary: #F8F8F8;
    --color-text: #333;
    --color-content-bg: rgba(255, 255, 255, 0.85);
    --color-shadow: rgba(0, 0, 0, 0.1);
}

/* 黑暗模式 */
[data-theme="dark"] {
    --bg-color: #031116;
    --text-color: #ffffff;
    --footer-text-color: #ffffff;
    --link-color: #57ace7;
    --motto-text-color: #c9d0d4;
    --border-color: gray;

    --image-shadow-color: rgba(59, 130, 246, 0.4);
    
    /* 黑暗模式弥散渐变背景相关变量 */
    --color-background-primary: #121212;
    --color-text: #E0E0E0; 
    --color-content-bg: rgba(30, 30, 30, 0.85);
    --color-shadow: rgba(255, 255, 255, 0.1);
}

 html, body { 
    margin: 0;
    padding: 0;
}

html {
    height: 100%;
}

body {
    font-family: 'Comic Sans MS', 'Comic Neue';
    /* font-weight: bold; */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-color: var(--color-background-primary); /* 使用新变量 */
    color: var(--text-color);
    position: relative;
    height: 100%;
    width: 100%;
    overflow: hidden;
    transition: background-color 0.5s ease, color 0.5s ease;
}

/* 弥散渐变背景伪元素 */
body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    
    /* 亮模式弥散渐变 (莫兰迪淡蓝主导) */
    background: 
        radial-gradient(circle at 15% 25%, #ADC4D4 0%, transparent 70%), /* 淡灰蓝 */
        radial-gradient(circle at 75% 75%, #DFD6DB 0%, transparent 65%), /* 灰粉米 */
        radial-gradient(circle at 40% 10%, #DBCAB5 0%, transparent 40%), /* 淡棕褐 */
        radial-gradient(circle at 90% 40%, #C1D2C1 0%, transparent 45%); /* 淡灰绿 */
    
    filter: blur(120px);
    opacity: 0.95;
    animation: moveGradients 15s infinite alternate ease-in-out;
    transition: opacity 0.5s, background 0.5s;
}

/* 黑暗模式下的弥散渐变 */
[data-theme="dark"] body::before {
    /* 覆盖亮模式的背景设置，使用新的深色系蓝色和紫色 */
    background: 
        radial-gradient(circle at 20% 80%, #2D5B8F 0%, transparent 75%), /* 深海蓝，大光斑 */
        radial-gradient(circle at 80% 20%, #5A589F 0%, transparent 60%), /* 深靛紫，中光斑 */
        radial-gradient(circle at 5% 50%, #8E8EF8 0%, transparent 45%),  /* 电光紫，小高亮 */
        radial-gradient(circle at 95% 5%, #1D2E55 0%, transparent 50%);  /* 深海军蓝，点缀阴影 */

    /* 保持动画和模糊不变，但可以调整不透明度来增强"发光"感 */
    opacity: 0.8;
}

/* 动画定义 */
@keyframes moveGradients {
    0% {
        transform: scale(1) translate(0, 0);
    }
    50% {
        transform: scale(1.15) translate(80px, -60px);
    }
    100% {
        transform: scale(1.05) translate(-100px, 40px);
    }
}
</style>